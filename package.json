{
  "name": "d-render-projects",
  "version": "1.0.0",
  "type": "module",
  "description": "d-render系列仓库",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "demo": "pnpm -C play serve",
    "changeset": "changeset",
    "styles": "gulp --require @esbuild-kit/cjs-loader -f ./build/tasks/styles/gulpfile.js",
    "dev:styles": "pnpm run build:styles -- --watch=true",
    "gen:version": "changeset version",
    "build": "rollup -c ./build/tasks/components.js",
    "dev": "rollup -c ./build/tasks/components.js --watch",
    "types": "node --require @esbuild-kit/cjs-loader ./build/tasks/types.js",
    "dev:d-render": "cross-env ENTRY_MODULE=d-render pnpm run dev",
    "build:d-render": "cross-env ENTRY_MODULE=d-render pnpm run build && cross-env ENTRY_MODULE=d-render pnpm run types && cross-env ENTRY_MODULE=d-render pnpm run styles",
    "dev:shared": "cross-env ENTRY_MODULE=shared pnpm run dev",
    "build:shared": "cross-env ENTRY_MODULE=shared pnpm run build",
    "dev:plugin-standard": "cross-env ENTRY_MODULE=plugin-standard pnpm run dev",
    "build:plugin-standard": "cross-env ENTRY_MODULE=plugin-standard pnpm run build && cross-env ENTRY_MODULE=plugin-standard pnpm run styles",
    "build:plugin-antdv": "cross-env ENTRY_MODULE=plugin-antdv pnpm run build && cross-env ENTRY_MODULE=plugin-antdv pnpm run styles",
    "lint": "eslint --fix build/**",
    "build-all": "run-s build:*",
    "deploy:docs": "pnpm -C play build && scp -r play/dist/* x-develop.cn:~/web_html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@d-render/shared": "workspace:*",
    "@d-render/plugin-standard": "workspace:*",
    "@d-render/plugin-antdv": "workspace:*",
    "d-render": "workspace:*",
    "play": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@esbuild-kit/cjs-loader": "^2.4.2",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-standard": "^8.0.0",
    "chalk": "^5.2.0",
    "consola": "^3.1.0",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.0.0",
    "eslint-plugin-vue": "^9.2.0",
    "fast-glob": "^3.2.12",
    "fglob": "^0.0.1",
    "fs-extra": "^11.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-less": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.21.7",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "vite": "^4.3.5",
    "vue": "^3.2.47"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
